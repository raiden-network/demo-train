void setGradient(int x, int y, float w, float h, color c1, color c2, int axis ) {

  noFill();

  if (axis == Y_AXIS) {  // Top to bottom gradient
    for (int i = y; i <= y+h; i++) {
      float inter = map(i, y, y+h, 0, 1);
      color c = lerpColor(c1, c2, inter);
      stroke(c);
      line(x, i, x+w, i);
    }
  }  
  else if (axis == X_AXIS) {  // Left to right gradient
    for (int i = x; i <= x+w; i++) {
      float inter = map(i, x, x+w, 0, 1);
      color c = lerpColor(c1, c2, inter);
      stroke(c);
      line(i, y, i, y+h);
    }
  }
}

void drawMountain(float r_stepsize, float r_jitter, float t_stepsize, int radmin, int radmax) { 
  pushMatrix();
    translate(width/2., height/2.);
    float r_rand = random(r_jitter);
    
    //outer loop creates radial virtual lines
    for (float r=0; r<TWO_PI;r+= r_stepsize + r_rand) {
      r_rand = random(r_jitter);  
      float rad_rand = random(radmin,radmax);
      
      //inner circle connects to radial lines
      for (float t=0; t<1; t+=t_stepsize) {
        stroke(lerpColor(c1,c2,t));
        line(rad_rand*t*cos(r),rad_rand*t*sin(r),rad_rand*t*cos(r+r_stepsize+r_rand),rad_rand*t*sin(r+r_stepsize+r_rand));
                    
      }   
        //line(radius*cos(r),radius*sin(r),0,0); 
    }  
  popMatrix();
}
